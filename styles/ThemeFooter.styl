.Footer
    width 100%
    &__top
        background #fafafa
        border-top 1px solid #e5e5e5
        padding 40px 35px
        letter-spacing 0.08em
        text-align center
        &__email
            display inline-block
            text-align left
            vertical-align middle
            margin 0 20px
            &__link
                display inline-block
                position relative
                background none
                font-size 11px
                font-weight 500
                line-height 24px
                color #949494
                text-transform uppercase
                transition opacity 0.25s ease
                cursor pointer
                backface-visibility hidden
    &__bottom
        position absolute
        left 0
        box-sizing border-box
        width 100%
        height auto
        padding 20px 28px 18px 30px
        border-top 2px solid #404040
        background #555555
        &__left
            display block
            color #e4e4e4
            font-size 13px
            font-weight 300
            line-height 1.938461538em
            letter-spacing 0.03em
        &__link
            font-family "Roboto Condensed"
            color #fff
            margin-right 20px