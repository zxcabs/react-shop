.StoreItem
    & a
        text-decoration none
        color #000
    width 277px
    margin-right 17px
    overflow hidden
    float left
    margin-bottom 40px
    position relative
    height 350px
    &:nth-child(4n+4)
        margin-right 0
    &__image-and-details
        border 1px solid #e5e5e5
        margin-bottom 10px
        overflow hidden
        height 275px
    &__image
        display block
        width 275px
        height 275px
    &__model
        display block
        text-align center
        font-family 'Roboto Condensed','Arial Narrow'
        text-transform uppercase
        color #666
        font-size 14px
    &__name
        display block
        text-align center
        font-size 18px
    &__price
        display block
        text-align center
        font-size 16px
        font-weight 600
        &__deleted
            font-size 12px
            color #666
    &__details
        width 275px
        background rgba(245,245,245,.8)
        overflow hidden
        height 70px
        transform translate3d(0,0,0)
        transform-style preserve-3d
        transition 200ms ease
        &--active
             transform translate3d(0,-70px,0)
        &__fast-look
            display block
            text-align center
            width 150px
            margin 20px auto
            color #000
            background #fff
            border 1px solid #000
            font-family 'Roboto Condensed','Arial Narrow'
            text-transform uppercase
            padding 5px 8px
            font-size 16px
