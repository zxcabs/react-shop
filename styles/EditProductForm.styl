.EditProductForm
    display: block
    overflow: auto
    &__label
        display: block
        overflow: hidden
        margin-bottom: 10px
        &__description
            display: block
            width: 140px
            font-size: 12px
    &__row
        overflow: hidden
        &:before
            display: block
            content: ""
        &__left
            float: left
        &__right
            float: left
            margin-left: 20px
    &__controls
        &__list
            display: block
            overflow: hidden
            position: relative
            list-style: none
            margin: 20px 0 0 0
            padding: 0 0 0 20px
            &__item
                float: left
                line-height: 18px
                &__link
                    display: block
                    border: 1px solid #e5e5e5
                    margin: 1px 10px 1px 0
                    padding: 5px 10px
                    font-size: 12px
                    border-radius: 5px
                    color: #0088cc
                    background-color: #fff
                    line-height: 1
                    &:hover
                        color: #fff
                        background-color: #0088cc
                        border: 1px solid #0088cc
                    &--active
                        color: #fff
                        background-color: #0088cc
                        border: 1px solid #0088cc
        &:after
            display: block
            clear: both
    &__tab
        display: none
        &--active
            display: block
    &__image-input
        position: relative
        vertical-align: middle
        overflow: hidden
        width: 190px
        height: 190px
        border: 2px dashed #bbb
        border-radius: 3px
        background-color: #fafafa
        text-decoration: none
        opacity: .6
        transition: opacity .2s
        margin: 0 0 20px 0
        &:hover {
            opacity: 1
        }
        &__note
            display: block
            position: absolute
            padding: 0 20px
            top: 70px
            text-align: center
        &__hidden-input
            position: absolute
            cursor: pointer
            opacity: 0
            width: 188px
            height: 188px
            margin: 0
    &__footer
        margin: 0
        background: #fafafa
        padding: 20px
        border: 1px solid #e5e5e5
        border-right: none
        border-left: none