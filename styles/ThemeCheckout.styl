.CheckoutBody
    width 1160px
    margin 0 auto
    padding 20px
    &__heading
        font-family 'Roboto Condensed','Arial Narrow'
        display block
        font-size 40px
        margin 20px 0
.CheckoutShipping
    display block
    width 700px
    &__heading
        font-family 'Roboto Condensed','Arial Narrow'
        display block
        font-size 24px
        margin 20px 0
    &__contents
        width 75%
        padding-right 2.5em
        margin-left 1em
        &__row
            padding-left .5em
            margin-top 1em
            position relative
            &__input
                box-sizing border-box
                border-radius 0.125em
                box-shadow 0px 0px 0px 1px transparent
                transition padding 0.25s !important
                font-size 22px
                color #646464
                width 400px
                font-family "Roboto Condensed"
                margin 0px
                padding 0 1em 0 0.5em
                line-height 1.2
                min-height 2em
                border 1px solid #cacaca
                -webkit-font-smoothing antialiased
            &__figure
                position absolute
                top -.5em
                height 100%
                left -1.5em
                line-height 0
                font-size 1em
                text-align center
                width 1.5em
                overflow hidden
                max-height 3.5em
                &::after
                    content '*'
                    color #8e0202
                    line-height 3.5em
                    font-size 1.14286em
