.Categories
    background #fff
    border-bottom 1px solid #e5e5e5
    height 50px
    width 100%
    &__wrap
        width 1160px
        padding 0 20px
        margin 0 auto
        &__list
            padding 0
            margin 0
            height 50px
            overflow hidden
            &__item
                color #000
                display inline-block
                line-height 50px
                margin-right 10px
                &:hover &__hidden
                    display block
                &__link
                    color #000
                    display inline-block
                    line-height 50px
                    margin-right 10px
                    font-family 'Roboto Condensed','Arial Narrow'
                    text-transform uppercase
                    padding 0 20px
                    &:hover
                        color #9d005c
                        opacity 1
                &__hidden
                    position absolute
                    z-index 4
                    background #fafafa
                    padding 0 20px
                    width 250px
                    display none
                    margin-top -2px
                    &__link
                        display block
                        font-family 'Roboto Condensed'
                        color #000
                        line-height 20px
                        margin-top 15px
                        &:last-child
                            margin-bottom 15px
