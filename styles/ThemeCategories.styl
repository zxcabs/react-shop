.Categories
    background #fff
    border-bottom 1px solid #e5e5e5
    height 50px
    width 100%
    &__wrap
        width 1160px
        padding 0 20px
        margin 0 auto
        &__list
            padding 0
            margin 0
            height 50px
            overflow hidden
            &__item
                color #000
                display inline-block
                line-height 50px
                margin-right 10px
                &__link
                    color #000
                    display inline-block
                    line-height 50px
                    margin-right 10px
                    font-family 'Roboto Condensed','Arial Narrow'
                    text-transform uppercase
                    &:hover
                        color #9d005c
                        opacity 1