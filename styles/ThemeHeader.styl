.Header
    height 55px
    width 100%
    background #fff
    border-bottom 1px solid #e5e5e5
    &__wrap
        max-width 1160px
        padding 0 20px
        overflow hidden
        margin 0 auto
        height 55px
        &__logo
            display inline-block
            float left
            color #000
            font-weight 100
            font-size 30px
            line-height 56px
        &__cart
            display inline-block
            position relative
            float right
            background-image url("/i/cart.svg")
            width 60px
            height 55px
            -webkit-background-size 40px
            background-size 40px
            background-repeat no-repeat
            background-position center
            opacity .7
        &__search
            display inline-block
            float right
            background-image url("/i/search.svg")
            width 60px
            height 55px
            -webkit-background-size 30px
            background-size 30px
            background-repeat no-repeat
            background-position center
            opacity .7
